pipeline {
    agent any
    environment {
    DOCKERHUB_CRED=credentials('dockerhub')
    IMAGE_NAME="vivek5041/myweb_app" // Corrected format
    IMAGE_TAG="${env.BUILD_NUMBER}"  // Use build number for unique tag
}
    
    stages {
        stage('checkout') {
            steps {
                git url:'git@github.com:1ms24mc111/myweb_app.git', branch:'main' 
            }
        }
        
        stage('Build Docker Image') {
    steps {
        script {
            // Build using the correct name and tag
            dockerImage = docker.build("${IMAGE_NAME}:${IMAGE_TAG}") 
        }
    }
}
        
        stage('Push to DockerHub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/','dockerhub') {
                        dockerImage.push()
                    }
                }
            }
        }
    }
    
    post {
    always {
        // Run the cleanup steps inside an explicit 'script' block
        // to ensure the 'deleteDir' step has the required 'node' context.
        script {
            node {
                echo 'Cleaning Up WorkSpace'
                deleteDir()
            }
        }
    }
}
}
